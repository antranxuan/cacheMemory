@model DocproPVEP.Models.View.CategoryCusModel
@{
    var searchParam = ViewBag.SearchParam as DocproPVEP.Customs.Params.SearchParam ?? new DocproPVEP.Customs.Params.SearchParam();
}
<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <a href="@Locate.RUrl("/home.html")"><i class="fa fa-home"></i>@Locate.T("Tổng quan")</a>
        </li>
        <li>@Locate.T("Quản lý Demo")</li>
        <li class="active">@ViewBag.Title</li>
    </ul>
</div>
<div class="page-body">
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-yellow">
                    <span class="widget-caption has-sub-caption">
                        <span class="widget-caption-left">
                            <i class="fa fa-folder-open"></i>
                        </span>
                        <span class="widget-caption-right">
                            <span class="widget-mainCaption">@ViewBag.Title</span>
                            @*<span class="widget-subCaption">@Locate.T("Có {0} nhà tài trợ được tìm thấy", ViewBag.Pagination.RowCount)</span>*@
                        </span>
                    </span>
                    <div class="widget-buttons">
                        <a class="widget_back_btn text-btn hidden" href="#" title="@Locate.T("Quay lại")"><i class="fa fa-arrow-left" aria-hidden="true"></i> <span>@Locate.T("Quay lại")</span></a>
                        <a data-toggle="maximize" href="javascript:;"><i class="fa fa-expand"></i></a>
                        <a data-toggle="collapse" href="#"><i class="fa fa-minus"></i></a>
                        <a data-toggle="dispose" href="javascript:;"><i class="fa fa-times"></i></a>
                    </div>
                </div>
                <div class="widget-body no-padding">
                    <div class="dataTables_wrapper form-inline">
                        <div class="dataTables_filter widget_form_table">
                            <form class="quickSearch" data-target="#divTables" autocomplete="off" action="@Model.ActionLinkSearch" method="post" enctype="multipart/form-data">
                                <div class="col-md-2 quickSearch_md">
                                    <label>
                                        <input type="text" name="Term" class="form-control input-sm" placeholder="@Locate.T("Nhập thông tin tìm kiếm")" value="@searchParam.Term" aria-controls="searchable">
                                    </label>
                                </div>
                                <div class="col-md-2 dataFilter_Dropdown_Section">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="glyphicon glyphicon-search"></i> <span class="hidden-xs hidden-sm">@Locate.T("Tìm kiếm")</span>
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div class="DTTT btn-group">
                            <a id="#FrmCr" title="@Locate.T("Thêm mới")" data-target=".ui-dialog:visible" href="@Locate.Url("/Lione-Demo/create.html")" class="quickUpdate btn btn-info margin-bottom-5" tabindex="0" aria-controls="searchable">
                                <i class="fa fa-plus"></i> <span class="hidden-xs hidden-sm">@Locate.T("Thêm mới")</span>
                            </a>
                        </div>
                        <div id="divTables">
                            @Html.Partial("DanhSach")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

