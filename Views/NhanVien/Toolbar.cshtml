<div class="dataTables_filter">
    <form class="quickSearch" data-target="#Section" action="@Locate.Url("/nhanvien.html")" method="post" enctype="multipart/form-data">
        <div class="col-md-2 quickSearch_md">
            <label>
                <input type="hidden" value="@ViewBag.SearchParam.Type" name="Type" />
                <input type="text" value="@ViewBag.SearchParam.Term" name="Term" class="form-control input-sm" placeholder="@Locate.T("Tìm kiếm theo tên, mô tả")" aria-controls="searchable">
            </label>
        </div>
        <div class="col-md-2">
            <button class="btn btn-info" type="submit"><i class="glyphicon glyphicon-search"></i> @Locate.T("Tìm kiếm")</button>
        </div>
    </form>
</div>
<div class="DTTT btn-group">
    <a title="@Locate.T("Xóa")" href="@Locate.Url("/nhanvien/is-deletes.html")"
       class="btn btn-danger hidden actMultiTicks quickDeletes" tabindex="0" aria-controls="searchable">
        <i class="fa fa-trash"></i> @Locate.T("Xóa")
    </a>
    @{
        var categoryParent = ViewBag.CategoryParent ?? new NhanVien();
    }
    <a id="#FrmCr" title="@Locate.T("Thêm mới")" data-target=".ui-dialog:visible" href="@Locate.Url("/NhanVien/create.html")" class="quickUpdate btn btn-info margin-bottom-5" tabindex="0" aria-controls="searchable">
        <i class="fa fa-plus"></i> <span class="hidden-xs hidden-sm">@Locate.T("Thêm mới")</span>
    </a>
</div>